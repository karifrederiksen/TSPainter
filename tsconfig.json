{
    "compilerOptions": {
        /* Basic Options */
        "target": "esnext",
        "module": "esnext",
        "jsx": "react",
        "outDir": ".cache/js",

        /* Strict Type-Checking Options */
        "strict": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "preserveConstEnums": false
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"]
}
