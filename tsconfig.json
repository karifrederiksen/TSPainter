{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "amd",
    "sourceMap": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outFile": "src/build/app.js"
  },
  "include": [
    "src/**/*" 
  ],
  "exclude": [
    ".git",
    ".vscode",
    "node_modules",
    "typings",
    "gulpfile.js",
    "package.json",
    "src/build"
  ]
}
