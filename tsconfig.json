{
    "compilerOptions": {
        /* Basic Options */
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "outDir": ".cache/js",

        /* Strict Type-Checking Options */
        "strict": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
