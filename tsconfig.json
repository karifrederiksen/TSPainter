{
    "compilerOptions": {
        /* Basic Options */
        "target": "esnext",
        "module": "esnext",
        "lib": ["dom", "es2016", "es2017", "es2018", "esnext"],
        "jsx": "preserve",
        "outDir": ".cache/js",

        /* Strict Type-Checking Options */
        "strict": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true

        //"plugins": [{ "name": "tslint-language-service" }]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
