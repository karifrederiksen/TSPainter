{
    "compilerOptions": {
        /* Basic Options */
        "incremental": true,
        "target": "es2016",
        "module": "esnext",
        "jsx": "react",
        "outDir": ".cache/js",
        "sourceMap": true,

        /* Strict Type-Checking Options */
        "strict": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "preserveConstEnums": false,
        "types": ["node", "jest"]
    },
    "include": ["src/**/*.ts"]
}
